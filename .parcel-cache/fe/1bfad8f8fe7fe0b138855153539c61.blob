.nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-1 {
  border: 1px solid #efe7ec;
  padding: 0.4rem;
  border-radius: 6px;
  text-align: center;
  width: 2.5rem;
  transform: rotate(-45deg);
}
.nav-1 .mains {
  border: 1px solid #e15113;
  padding: 0.3rem 0;
  /* background-color: #e15113; */
  border-radius: 6px;
}
.nav-1 p {
  transform: rotate(45deg);
  font-size: 11px;
  font-weight: 300;
  color: #e15113;
}

.nav-item .label {
  margin-top: 1rem;
  color: #000000;
  font-size: 13px;
}

.pagination button {
  border: none;
  outline: none;
  background: #d4b3a8;
  color: #e15113;
  padding: 5px 7px;
  border-radius: 5px;
}
.pagination {
  margin: 2rem auto;
  padding: 0 3.5rem;
}
.pagination::after {
  content: '';
  display: table;
  clear: both;
}

.pagination__btn--prev {
  float: left;
}
.pagination__btn--next {
  float: right;
}

/* ORDER VIEW */
.orders {
  flex-basis: 40%;
  background-color: #fffffd;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
  border-radius: 24px;
  min-height: 90%;
  color: #4f4f4f;
  margin-bottom: 2rem;
}

.order-heading {
  font-weight: 500;
  margin: 1.5rem 0 0.7rem 2rem;
}

.order-items {
  display: flex;
  flex-direction: column;
  gap: 1.8rem;
  margin: 1rem;
  padding: 0 2rem;
}

.order-preview {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  font-size: 11px;
}

.items-title {
  display: flex;
  justify-content: space-between;
}
.items-title {
  font-weight: 500;
}
.order-item-main {
  display: flex;
  justify-content: space-between;
}
.img {
  flex-basis: 20%;
}

.img img {
  width: 40px;
}

.order-item-main .title {
  font-size: 11px;
  padding: 0 1.5rem;
}
.increments {
  display: flex;
  gap: 0.5rem;
  margin-top: 6px;
  justify-content: center;
}
.sign {
  border: 1px solid #e15113;
  color: #e15113;
  padding: 0 2px;
  cursor: pointer;
}
.preview-footer {
  display: flex;
  justify-content: space-between;
}
.delete {
  cursor: pointer;
}

.add-to-cart {
  background-color: #d4b3a8;
  color: #e15113;
  cursor: pointer;
}
.add-to-cart p {
  padding: 6px 9px;
}
.mark {
  padding: 4px 15px;
  width: 45px;
  display: none;
  cursor: pointer;
}

.cart-add {
  float: right;
}
