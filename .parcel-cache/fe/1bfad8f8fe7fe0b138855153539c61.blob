* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  width: 100%;
  font-size: 15px;
  background-color: #fcfafb;
  font-family: sans-serif;
}

.container {
  height: 100vh;
  width: 85%;
  display: flex;
  margin: 0 auto;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-top: 1rem;
}
.checkout {
  display: flex;
  gap: 1.5rem;
  line-height: 1.3;
}
.checkout h1 {
  font-weight: 500;
  letter-spacing: 0.15rem;
}
.checkout p {
  color: #e15113;
  font-size: 13px;
}
.checkout p span {
  color: initial;
}
.checkout .arrow {
  margin-top: 1rem;
}
.cart-icon {
  position: relative;
}
.cart-icon .cart-icon-img {
  cursor: pointer;
  float: right;
  margin-right: 13px;
}

.cart-icon .counts p {
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 100%;
  background-color: #e15113;
  padding: 4px 6px;
  color: #fff;
  font-size: 11px;
  font-weight: 400;
}

.cart {
  padding: 1rem 0;
  position: absolute;
  right: 10rem;
  top: 2rem;
  z-index: 10;
  width: 30rem;
  background-color: #fff;
  padding: 1rem 2rem;
  box-shadow: 10px 20px 50px rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(0px);
  border-radius: 10px;

  visibility: hidden;
  opacity: 0;
  transition: all 0.5s 0.2s;
}
.cart__list {
  margin: 1rem;
  list-style: none;
  display: flex;
  flex-direction: column;
  gap: 2.5rem;
}

.cart:hover,
.cart-icon:hover + .cart {
  visibility: visible;
  opacity: 1;
}

.main-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 3rem;
}
.item-list {
  flex-basis: 65%;
}
.items {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}

.item {
  padding: 1rem;
  text-align: center;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
  border-radius: 2px;
  background-color: #ffffff;
  width: 200px;
  min-height: 200px;
  cursor: pointer;
}

.item img {
  width: 100px;
}
.item .item-title {
  margin: 0.5rem 0 0.3rem 0;
}
.nav {
  margin-bottom: 3rem;
  display: flex;
  justify-content: space-between;
  padding: 0 8rem;
  /* position: relative; */
}
