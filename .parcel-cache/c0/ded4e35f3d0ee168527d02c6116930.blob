* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  width: 100%;
  font-size: 15px;
  /* background-color: #505050; */
  font-family: sans-serif;
}

.container {
  height: 100vh;
  width: 85%;
  display: flex;
  margin: 0 auto;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-top: 1rem;
}
.checkout {
  display: flex;
  gap: 1rem;
  line-height: 1.3;
}
.checkout h1 {
  font-weight: 500;
  letter-spacing: 0.15rem;
}
.checkout p {
  color: #e15113;
  font-size: 13px;
}
.checkout p span {
  color: initial;
}
.checkout .arrow p {
  margin-top: 0.5rem;
  font-weight: 700;
  font-size: large;
  color: initial;
}
.cart-icon {
  position: relative;
  flex-basis: 5%;
}
.cart-icon img {
  width: 80%;
}
.cart-icon .counts p {
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 100%;
  background-color: #e15113;
  padding: 4px 8px;
  color: #fff;
}
.main-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 3rem;
}
.item-list {
  flex-basis: 50%;
}
.items{
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}
