* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  width: 100%;
  font-size: 15px;
  background-color: #505050;
}

.container {
  height: 100vh;
  width: 85%;
  display: flex;
  margin: 0 auto;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-top: 1rem;
}
.checkout {
  display: flex;
  gap: 1rem;
  line-height: 1.5;
}
