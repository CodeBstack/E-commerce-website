* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  width: 100%;
  font-size: 15px;
  /* background-color: #505050; */
  font-family: sans-serif;
}

.container {
  height: 100vh;
  width: 85%;
  display: flex;
  margin: 0 auto;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-top: 1rem;
}
.checkout {
  display: flex;
  gap: 1rem;
  line-height: 1.3;
}
.checkout h1 {
  font-weight: 500;
  letter-spacing: 0.15rem;
}
.checkout p {
  color: #e15113;
  font-size: 13px;
}
.checkout p span {
  color: initial;
}
.checkout .arrow p {
  margin-top: 0.5rem;
  font-weight: 700;
  font-size: large;
  color: initial;
}
.cart-icon {
  position: relative;
  flex-basis: 5%;
}
.cart-icon img {
  width: 80%;
}
.cart-icon .counts p {
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 100%;
  background-color: #e15113;
  padding: 4px 6px;
  color: #fff;
  font-size: 11px;
  font-weight: 400;
}
.main-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 3rem;
}
.item-list {
  flex-basis: 65%;
}
.items {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}
.nav {
  margin-bottom: 3rem;
  display: flex;
  justify-content: space-evenly;
  /* width: 80%; */
  margin: 0 2rem 3rem 2rem;
}
.nav-1 {
  border: 1px solid red;
  /* flex-basis: 5%; */
  text-align: center;
  /* transform: rotate(-45deg); */
}
.nav-1 span{
  padding: .5rem;
}
.nav-1 p {
  /* transform: rotate(45deg); */
  padding: 5px;
}
.item {
  padding: 1rem;
  text-align: center;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
  border-radius: 2px;
}
.item h3 {
  margin: 0.5rem 0 0.3rem 0;
}
.orders {
  flex-basis: 35%;
}
