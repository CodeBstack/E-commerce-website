* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
body {
  width: 100%;
  font-size: 15px;
  background-color: #fcfafb;
  font-family: sans-serif;
}

.container {
  height: 100vh;
  width: 85%;
  display: flex;
  margin: 0 auto;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-top: 1rem;
}
.checkout {
  display: flex;
  gap: 1.5rem;
  line-height: 1.3;
}
.checkout h1 {
  font-weight: 500;
  letter-spacing: 0.15rem;
}
.checkout p {
  color: #e15113;
  font-size: 13px;
}
.checkout p span {
  color: initial;
}
.checkout .arrow {
  margin-top: 1rem;
}
.cart-icon {
  position: relative;
  flex-basis: 5%;
}
.cart-icon img {
  width: 80%;
}
.cart-icon .counts p {
  position: absolute;
  top: 0;
  right: 0;
  border-radius: 100%;
  background-color: #e15113;
  padding: 4px 6px;
  color: #fff;
  font-size: 11px;
  font-weight: 400;
}
.main-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
  margin-top: 3rem;
  /* flex-direction: row-reverse; */
}
.item-list {
  flex-basis: 65%;
}
.items {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
}
.nav {
  margin-bottom: 3rem;
  display: flex;
  justify-content: space-between;
  padding: 0 8rem;
  position: relative;
}
.hr {
  transform: rotate(90deg);
}
.hr-1 {
  position: absolute;
  top: 0;
  right:0;
}
.nav-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nav-1 {
  border: 1px solid #efe7ec;
  padding: 0.4rem;
  border-radius: 2px;
  text-align: center;
  width: 2.5rem;
  transform: rotate(-45deg);
}
.nav-1 .mains {
  border: 1px solid #e15113;
  padding: 0.3rem 0;
  /* background-color: #e15113; */
  border-radius: 2px;
  /* width: 70%; */
}
.nav-1 p {
  transform: rotate(45deg);
  font-size: 11px;
  font-weight: 300;
  color: #e15113;
}

.nav-item .label {
  margin-top: 1rem;
  color: #000000;
  font-size: 13px;
}
.item {
  padding: 1rem;
  text-align: center;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
  border-radius: 2px;
  background-color: #ffffff;
}
.item h3 {
  margin: 0.5rem 0 0.3rem 0;
}

.orders {
  flex-basis: 40%;
  background-color: #fffffd;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.2);
  border-radius: 24px;
  height: 100vh;
  color: #4f4f4f;
}

.order-heading {
  font-weight: 500;
  margin: 1.5rem 0 0.7rem 2rem;
}

.order-items {
  display: flex;
  flex-direction: column;
  gap: 1.8rem;
  margin-top: 1rem;
  padding: 0 2rem;
}

.order-preview {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  font-size: 11px;
}

.item-title {
  display: flex;
  justify-content: space-between;
}
.item-title h3 {
  font-weight: 500;
}
.order-item-main {
  display: flex;
  justify-content: space-between;
}
.img {
  flex-basis: 20%;
}

.img img {
  width: 40px;
}

.order-item-main .title {
  font-size: 11px;
  padding: 0 1.5rem;
}
.increments {
  display: flex;
  gap: 0.5rem;
  margin-top: 3px;
  justify-content: center;
}
.sign {
  border: 1px solid #e15113;
  color: #e15113;
  padding: 0 2px;
}
.preview-footer {
  display: flex;
  justify-content: space-between;
}

.add-to-cart {
  background-color: #d4b3a8;
  color: #e15113;
}
.add-to-cart p {
  padding: 6px 9px;
}
.mark {
  padding: 4px 15px;
  width: 45px;
  display: none;
}

